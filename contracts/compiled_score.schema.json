{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "mtc://rhythm/compiled_score/0.1.0",
  "title": "Compiled Score (Rhythm)",
  "type": "object",
  "required": ["mtc_schema", "tracks", "tempo", "swing"],
  "properties": {
    "mtc_schema": { "const": "rhythm_compiled_score/0.1.0" },
    "tempo": { "type": "number", "minimum": 20, "maximum": 400 },
    "swing": { "type": "number", "minimum": 0, "maximum": 1 },
    "tracks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "steps"],
        "properties": {
          "name": { "type": "string" },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["on", "velocity"],
              "properties": {
                "on": { "type": "boolean" },
                "velocity": { "type": "number", "minimum": 0, "maximum": 127 }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
